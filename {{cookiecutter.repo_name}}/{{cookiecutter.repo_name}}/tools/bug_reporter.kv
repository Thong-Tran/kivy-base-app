#:kivy 1.10.1

<BugReporter>:
    txt_traceback: txt_traceback
    canvas:
        Color:
            rgba: .9,.9,.9,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        Label:
            id: title
            text: 'App has experienced an internal error :('
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint: None, None
            text_size: root.width, None
            size: self.texture_size
            halign:"center"
            valign: "middle"
            font_size: '19sp'
            bold: True
            color: .2,.2,.2, 1
        ScrollView:
            id: e_scroll
            bar_width: 10
            scroll_y: 0
            TextInput:
                id: txt_traceback
                size_hint_y: None
                height: max(e_scroll.height, self.minimum_height)
                background_normal: ''
                text: ''
                background_color: 0, 0, 0, 0.4
                foreground_color: 1, 1, 1, 1
                cursor_color: 0, 0, 0, 1
                selection_color: 0, 0, 0, 0.3
                readonly: True
        BoxLayout:
            padding: dp(10), dp(10)
            spacing: dp(5)
            size_hint_y:None
            height: dp(70)
            AnchorLayout:
                anchor_x:'center'
                anchor_y: 'center'
                BTReport:
                    text: 'Copy'
                    on_release: root.on_clipboard()
            AnchorLayout:
                anchor_x:'center'
                anchor_y: 'center'
                BTReport:
                    text: 'Report Bug'
                    on_release: root.on_report()
            AnchorLayout:
                anchor_x:'center'
                anchor_y: 'center'
                BTReport:
                    text: 'Close'
                    on_release: root.on_close()

<ReportWarning>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Warning'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text_size: self.size
            text: root.text
            padding: '4sp', '4sp'
            valign: 'middle'
        FloatLayout:
            size_hint_y: None
            height: dp(40)
            Button:
                on_release: root.dispatch('on_release')
                text: 'Report'
                pos_hint:{'center_x': 0.25, 'center_y': 0.5}
                padding_x: dp(10)
                text_size: [None, None]
                size_hint: None, .8
                size: self.texture_size
                halign: 'center'
                valign: 'center'
            Button:
                on_release: root.dismiss()
                text: 'Close'
                pos_hint:{'center_x': 0.75, 'center_y': 0.5}
                padding_x: dp(10)
                text_size: [None, None]
                size_hint: None, .8
                size: self.texture_size
                halign: 'center'
                valign: 'center'

<BTReport@Button>:
    padding_x: dp(10)
    text_size: [None, None]
    size_hint: None, .8
    size: self.texture_size
    halign: 'center'
    valign: 'center'
    font_size: '19sp'
    # color: .2,.2,.2, 1
